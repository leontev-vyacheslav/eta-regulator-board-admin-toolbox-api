{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
    },
    "pylint.args": [
        "--disable=missing-module-docstring,missing-function-docstring,missing-class-docstring",
        "--max-line-length=180",
    ],
    "black-formatter.args": [
        "--line-length=180",
    ],
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "name": "eta_regulatior_board_admin",
            "database": "${workspaceFolder:eta-regulator-board-admin-toolbox-api}/data/data.sqlite3"
        }
    ],
    "sqltools.useNodeRuntime": true,
}